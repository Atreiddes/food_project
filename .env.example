# ===================================
# Database Configuration
# ===================================
DB_NAME=nutrimarket_db
DB_USER=nutrimarket_user
DB_PASSWORD=nutrimarket_pass
DB_HOST=database
DB_PORT=5432

# ===================================
# RabbitMQ Configuration
# ===================================
RABBITMQ_USER=admin
RABBITMQ_PASS=admin
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672

# ===================================
# Security Configuration
# ===================================
# ВАЖНО: Сгенерируйте безопасный ключ минимум 32 символа!
# Можно использовать: openssl rand -hex 32
JWT_SECRET=change-me-to-secure-random-32-char-minimum-key-please
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_HOURS=24

# ===================================
# Ollama ML Configuration
# ===================================
OLLAMA_URL=http://ollama:11434
OLLAMA_MODEL=mistral

# ===================================
# ML Service Configuration
# ===================================
ML_SERVICE_COST_PER_REQUEST=10
DEFAULT_USER_BALANCE=1000

# ===================================
# Queue Configuration
# ===================================
QUEUE_NAME=ml_tasks
QUEUE_MESSAGE_TTL=3600000
QUEUE_MAX_LENGTH=10000

# ===================================
# CORS Configuration
# ===================================
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*

# ===================================
# Application Configuration
# ===================================
APP_NAME=ML Nutrition Service
VERSION=1.0.0
NODE_ENV=development
